<Project>
  <!-- https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build?view=vs-2017 -->
  <!-- Well-known properties -->
  <PropertyGroup>
    <LangVersion>7.3</LangVersion>
    <TargetFx>netcoreapp2.2</TargetFx>
    <RuntimeFxVer Condition="'$(TargetFramework)' == 'netcoreapp2.1'">2.2.103</RuntimeFxVer>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType>Full</DebugType>
    <BaseOutputPath>$(MSBuildThisFileDirectory)bin</BaseOutputPath>
    <DefineConstants Condition="'$(BuildingInsideVisualStudio)' == 'true'">$(DefineConstants);BuildingInsideVisualStudio</DefineConstants>
    <NoWarn>$(NoWarn),1573,1591,1712</NoWarn>
	<CodeAnalysisRuleSet>$(MSBuildThisFileDirectory)fxcop.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers"  Version="2.6.2"/>
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.6.2"/>
    <PackageReference Include="Microsoft.NetCore.Analyzers" Version="2.6.2"/>
  </ItemGroup>

</Project>